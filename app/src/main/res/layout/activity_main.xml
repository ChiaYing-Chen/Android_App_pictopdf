<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?attr/colorSurface"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnPrimary"
        android:background="?attr/colorPrimary"
        android:gravity="center"
        android:padding="16dp"
        android:layout_marginBottom="16dp" />

    <!-- 模式切換：照片 / PDF -->
    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/toggleMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:singleSelection="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnModePhotos"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="照片"
            android:checked="true"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnModePdfs"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="PDF"/>
    </com.google.android.material.button.MaterialButtonToggleGroup>

    <!-- 照片區塊 -->
    <LinearLayout
        android:id="@+id/groupPhotos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvSelectedCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_images_selected"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvImages"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp"
            android:background="?attr/colorSurfaceVariant"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="時間範圍"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvDateRange"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="點此設定日期時間範圍"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:gravity="center"
                    android:padding="8dp"/>

                <Button
                    android:id="@+id/btnOrganizePhotos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="依時間篩選照片" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btnSelectImages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_images"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnClearSelection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="清除所有已選擇的照片"
            android:layout_marginBottom="8dp"
            android:enabled="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp"
            android:background="?attr/colorSurfaceVariant"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="壓縮選項"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:layout_marginBottom="8dp"/>

            <RadioGroup
                android:id="@+id/rgCompression"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbNoCompression"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="不壓縮"
                    android:textColor="?attr/colorOnSurfaceVariant" />

                <RadioButton
                    android:id="@+id/rbMediumCompression"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="中等壓縮"
                    android:textColor="?attr/colorOnSurfaceVariant" />

                <RadioButton
                    android:id="@+id/rbMinCompression"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="最小壓縮"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:checked="true" />
            </RadioGroup>
        </LinearLayout>

        <Button
            android:id="@+id/btnConvertToPdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/convert_to_pdf"
            android:enabled="false"
            android:layout_marginBottom="8dp" />
    </LinearLayout>

    <!-- PDF 區塊 -->
    <LinearLayout
        android:id="@+id/groupPdfs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPdfs"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvPdfEmptyMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="尚無 PDF 檔案"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:visibility="gone"/>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:visibility="gone" />

</LinearLayout>